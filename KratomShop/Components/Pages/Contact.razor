<section class="contact_form" >
    <h2>Formulář</h2>
    <form>
        <div class="form-group">
            <input type="text" placeholder="Jméno" required aria-required="true" aria-label="Jméno">
            <input type="text" placeholder="Příjmení" required aria-required="true" aria-label="Příjmení">
        </div>
        <div class="form-group">
            <input type="email" placeholder="e-mail@domena.com" required aria-label="E-mail">
        </div>
        <div class="form-group">
            <textarea placeholder="Text..." rows="5" required aria-label="Vaše zpáva"></textarea>
        </div>
        <button type="submit" aria-label="Odeslat formulář">Odeslat</button>
    </form>
</section>
